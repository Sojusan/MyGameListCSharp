<UserControl x:Class="MyGameList.Models.ReviewElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyGameList.Models"
             mc:Ignorable="d" 
             d:DesignHeight="206" d:DesignWidth="850">
    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Width="850">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Image x:Name="AvatarImage" Height="60" Width="100" Stretch="Fill" Source="/MyGameList;component/Resources/avatarPlaceholder.png"/>
                    <StackPanel Width="100" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15,0,0,0">
                        <TextBlock x:Name="NicknameTextBlock" TextWrapping="Wrap" Text="TextBlock" Margin="0,0,0,11" FontWeight="Bold"/>
                        <TextBlock x:Name="DateTextBlock" TextWrapping="Wrap" Text="TextBlock"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <TextBlock x:Name="ReviewTextBlock" Width="845" Height="140" TextTrimming="WordEllipsis" TextWrapping="Wrap" Text="TextBlock" Margin="2,0"/>
        </StackPanel>

    </Grid>
</UserControl>
