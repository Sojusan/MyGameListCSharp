<UserControl x:Class="MyGameList.Models.NewReviewElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyGameList.Models"
             mc:Ignorable="d" 
             d:DesignHeight="190" d:DesignWidth="365">
    <Grid>
        <StackPanel Width="350" Height="190" Orientation="Horizontal">
            <Image x:Name="CoverImage" Source="/MyGameList;component/Resources/gamePlaceholder.jpg" Stretch="Fill" Width="130" Cursor="Hand"/>
            <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                <DockPanel LastChildFill="False">
                    <TextBlock TextWrapping="Wrap" Text="New Reviews" VerticalAlignment="Top" Margin="0,0,10,0" FontSize="20"/>
                    <TextBlock x:Name="NewReviewsCounterTextBlock" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Margin="0"/>
                </DockPanel>
                <Button x:Name="MarkReviewsAsReadedButton" Content="Mark reviews as readed" Height="27" Margin="0,40,0,0" Width="150" Background="#FF0FB200" BorderBrush="#FF0FB200" Foreground="White" HorizontalAlignment="Left" Cursor="Hand"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
