<UserControl x:Class="MyGameList.Models.InfoOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyGameList.Models"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="180">
    <Grid>
        <Canvas x:Name="TestCanvas" HorizontalAlignment="Left" Height="250" VerticalAlignment="Top" Width="180" MouseEnter="MouseEnter_Event" MouseLeave="MouseLeft_Event">
            <Image x:Name="CoverImage" HorizontalAlignment="Left" VerticalAlignment="Top" Source="/MyGameList;component/Resources/gamePlaceholder.jpg" Height="250" Width="180" Stretch="Fill"/>
            <TextBlock x:Name="HeaderTextBox" TextWrapping="Wrap" TextTrimming="WordEllipsis" Text="Sekiro Shadow Die Twice" Height="25" Width="179" Background="#6EFFFFFF" Foreground="Black" FontSize="18" Canvas.Left="1"/>
        </Canvas>
    </Grid>
</UserControl>
