<UserControl x:Class="MyGameList.Models.FriendElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyGameList.Models"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="380">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="15,0,0,15" Height="90">
            <Image x:Name="AvatarImage" Source="/MyGameList;component/Resources/avatarPlaceholder.png" Stretch="Fill" Width="130"/>
            <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                <TextBlock x:Name="NicknameTextBlock" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" Text="Placeholder nickname" VerticalAlignment="Top" Margin="0,0,10,10" FontSize="20" Width="215" Height="28"/>
                <DockPanel LastChildFill="False">
                    <TextBlock TextWrapping="Wrap" Text="Friends since" VerticalAlignment="Top" Margin="0,0,15,0"/>
                    <TextBlock x:Name="DateTextBlock" TextWrapping="Wrap" Text="Placeholder date 00.00.00" VerticalAlignment="Top"/>
                </DockPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
